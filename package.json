{
  "name": "boilerplate-api-express-nodejs",
  "version": "1.0.0",
  "description": "Template de Servidor NodeJS utilizando Express, Sequelize, EJS",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiilins/boilerplate-api-express-nodejs"
  },
  "scripts": {
    "start": "tsc && node ./lib/index.js ./src/server.js",
    "dev": "nodemon ./src/server.js",
    "build": "tsc",
    "start:dev": "ts-node-dev ./index.ts",
    "postinstall": "husky install",
    "lint": "eslint src --max-warnings=0",
    "lint:fix": "eslint src --max-warnings=0 --fix"
  },
  "keywords": [
    "nodeJS",
    "expressJS",
    "EJS"
  ],
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix"
    ]
  },
  "author": {
    "name": "Thiago Lins",
    "email": "falecom@thiagolins.dev.br",
    "url": "https://www.thiagolins.dev.br"
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "swagger-ui-express": "^4.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
